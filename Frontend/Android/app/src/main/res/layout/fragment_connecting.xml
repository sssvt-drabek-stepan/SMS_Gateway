<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_yellow"
    tools:context=".fragments.ConnectingFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:src="@drawable/ic_error_outline"
            tools:ignore="MissingConstraints"
            android:indeterminateDrawable="@drawable/progress"
            android:contentDescription="@string/connection_error_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connecting_to_server"
            android:gravity="center"
            android:textColor="@color/warning_yellow"
            android:textStyle="bold"
            android:layout_marginHorizontal="40pt"
            android:textSize="18sp"/>
    </LinearLayout>

</FrameLayout>